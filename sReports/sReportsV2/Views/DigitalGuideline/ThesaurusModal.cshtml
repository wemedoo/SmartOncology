@using sReportsV2.Common.Helpers
@using sReportsV2.DTOs.CodeEntry.DataOut;
@using sReportsV2.Common.Extensions;
<div class="modal fade" id="thesaurusFilterModal" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content modal-content-password w-616">
            <div class="float-right filter-close-btn">
                <img alt="" class="close-modal" src="/css/img/icons/close_black.svg">
            </div>
            <div class="modal-body">
                <div class="form-group col-md-12">
                    <form class="designer-item-form" id="thesaurusFilterModalForm">
                        <div class="d-flex advanced-filter-header">
                            <img alt="" class="mr-3" src="/css/img/icons/ClinicalPathway/thesaurus_entry.svg">
                            <div>@sReportsV2.Cache.Resources.TextLanguage.ThesaurusEntry</div>
                        </div>
                        <div class="thesarus-container">
                            <div class="d-flex margin-top-10">

                                <div class="advanced-filter-item margin-right-0">
                                    <div class="codeset-thesaurus-group">
                                        <div class="label filter-label">
                                            @sReportsV2.Cache.Resources.TextLanguage.Find_thesaurus
                                        </div>
                                        <div class="search-container">
                                            <div class="input-container padding-bottom-15">
                                                <input class="filter-input search-input" type="text" id="thesaurusSearchInput" name="thesaurusSearchInput" data-thesaurusid="@(Model?.ThesaurusId ?? 0)"   />
                                                <img alt="" id="applySearchButton" class="search-thesaurus-button" src="/css/img/icons/search_green.svg" />
                                            </div>
                                            <div class="d-flex padding-bottom-15">
                                                <div class="thesaurus-table-container" id="thesaurusTableContainer">
                                                    <div class="single-table thesaurus-search-table">
                                                        <table class="table table-striped table-sreports search-thesaurus-table">
                                                            <thead>
                                                                <tr>
                                                                    <th>04.0MT ID</th>
                                                                    <th>@sReportsV2.Cache.Resources.TextLanguage.Preferred_term</th>
                                                                    <th>@sReportsV2.Cache.Resources.TextLanguage.Definition</th>
                                                                    <th></th>
                                                                </tr>
                                                            </thead>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="review-container" id="reviewContainer"></div>

                                </div>
                            </div>

                        </div>
                        <div class="button-partial">
                            <button class="submit-button right-button margin-left-13" type="button" onclick="saveThesaurus(event)" style="outline: none;">
                                <span class="submit-patient-info">@sReportsV2.Cache.Resources.TextLanguage.Save</span>
                            </button>
                            <div class="button-wrapper-filter float-right" id="close">
                                <a class="btn advanced-cancel" data-dismiss="modal" aria-label="Close">
                                    @sReportsV2.Cache.Resources.TextLanguage.Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).on('keypress', '.search-input', function (e) {
        if (e.which === enter) {
            e.preventDefault();
            e.stopPropagation();
            thesaurusFilterModal();
        }
    });
</script>

@Html.Raw(ScriptHelper.RenderScript(Url.Content("~/js/sReports/common/tableCommon.js"), "", ""))