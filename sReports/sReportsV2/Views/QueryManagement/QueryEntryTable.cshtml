@using sReportsV2.Common.Constants
@using sReportsV2.Common.Extensions
@using sReportsV2.DTOs.CodeEntry.DataOut
@using sReportsV2.DTOs.DTOs.QueryManagement.DataOut

@{
    var userCookieData = ViewBag.UserCookieData;
    string activeLanguage = userCookieData.ActiveLanguage;
    List<CodeDataOut> reasons = ViewBag.Reasons as List<CodeDataOut>;
    List<CodeDataOut> statuses = ViewBag.Statuses as List<CodeDataOut>;
    bool hasCreateUpdatePerm = userCookieData.UserHasPermission(PermissionNames.Update, ModuleNames.QueryManagement);
    bool hasViewPerm = userCookieData.UserHasPermission(PermissionNames.View, ModuleNames.QueryManagement);
    bool hasDeletePerm = userCookieData.UserHasPermission(PermissionNames.Delete, ModuleNames.QueryManagement);
}

<div class="table-responsive overflow-unset">
    <table class="table table-striped table-border">
        <thead class="color-header">
            <tr class="table-header-row">
                <th id="FieldId" class="sort-arrow" style="border-bottom: unset;border-top: unset;" onclick="sortTable('FieldId')">@sReportsV2.Cache.Resources.TextLanguage.Field_Label.ToUpper()</th>
                <th id="Reason" class="sort-arrow" style="border-bottom: unset;border-top: unset;" onclick="sortTable('Reason')">@sReportsV2.Cache.Resources.TextLanguage.Reason.ToUpper()</th>
                <th id="Status" class="sort-arrow" style="border-bottom: unset;border-top: unset;" onclick="sortTable('Status')">@sReportsV2.Cache.Resources.TextLanguage.Status.ToUpper()</th>
                <th id="Title" class="sort-arrow" style="border-bottom: unset;border-top: unset;" onclick="sortTable('Title')">@sReportsV2.Cache.Resources.TextLanguage.Title.ToUpper()</th>
                <th id="Description" class="sort-arrow" style="border-bottom: unset;border-top: unset;" onclick="sortTable('Description')">@sReportsV2.Cache.Resources.TextLanguage.Description.ToUpper()</th>
                <th style="border-bottom: unset;border-top: unset;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (QueryDataOut entry in Model.Data)
            {
                <tr id="row-@entry.QueryId" class="table-content-row" onclick="clickedQueryRow(event, @hasCreateUpdatePerm.ToJsBoolean(), '@entry.QueryId', '@entry.FieldId')">
                    <td>@entry.Field.Label</td>
                    <td>@entry.GetQueryReason(activeLanguage, reasons)</td>
                    <td>@entry.GetQueryStatus(activeLanguage, statuses)</td>
                    <td>@entry.Title</td>
                    <td>@entry.Description</td>
                    <td>
                        @if (hasCreateUpdatePerm || hasDeletePerm || hasViewPerm)
                        {
                            <div class="dropdown show">
                                <a class="dropdown-button" href="#" role="button" id="dropdownMenuLink-@entry.QueryId" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <img alt="" class="dots" src="/css/img/icons/3dots.png">
                                </a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink-@entry.QueryId">
                                    @if (hasCreateUpdatePerm)
                                    {
                                        <a class="dropdown-item" href="#" onclick="editOrViewEntity(event,'@entry.QueryId', '@entry.FieldId', @false.ToJsBoolean())"><img alt="" class="edit-svg-size" src="/css/img/icons/edit.svg">@sReportsV2.Cache.Resources.TextLanguage.Edit</a>
                                    }
                                    @if (hasViewPerm)
                                    {
                                        <a class="dropdown-item" href="#" onclick="editOrViewEntity(event,'@entry.QueryId', '@entry.FieldId', @true.ToJsBoolean())"><img alt="" class="edit-svg-size" src="/css/img/icons/info_grey.svg">@sReportsV2.Cache.Resources.TextLanguage.View</a>
                                    }
                                    @if (hasDeletePerm)
                                    {
                                        <a class="dropdown-item" href="#" onclick="removeQueryEntry(event, '@entry.QueryId')"><img alt="" class="edit-svg-size" src="/css/img/icons/remove.svg">@sReportsV2.Cache.Resources.TextLanguage.Remove</a>
                                    }
                                </div>
                            </div>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (Model.Data.Count == 0)
    {
        @await Html.PartialAsync("NoResultFound")
    }
    @if (Model.Data.Count > 0)
    {
        <div class="pager-container">
            @await Html.PartialAsync("Pagination")
        </div>
    }
</div>
