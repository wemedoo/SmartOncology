@using sReportsV2.Common.Extensions;
@using sReportsV2.DTOs.Form.DataOut;
@{
    string isReadOnly = ((bool)ViewBag.IsReadOnlyViewMode).ToJsBoolean();
}
@model string

    <div class="w-100 " >
        <div class="back-to-tree" onclick="goBackToTree()"><i class="fas fa-angle-left mr-5px"></i>@sReportsV2.Cache.Resources.TextLanguage.Back_To_Tree</div>
        <div id="jsoneditorContainer" class="d-flex w-100 form-json-height">
            <div id="jsoneditorTree" class="json-editor w-50 mr-3">
            </div>
            <div id="jsoneditorCode" class="json-editor w-50 ml-3">
            </div>
        </div>

    </div>

<script>
    $(document).ready(function (e) {
        showJsonDesignerEditor(@Html.Raw(Model), @isReadOnly);
    });
</script>